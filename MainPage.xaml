<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BuscaProdutos.ViewModels"
             x:Class="BuscaProdutos.MainPage">

    <!-- Definindo o BindingContext para a ViewModel -->
    <ContentPage.BindingContext>
        <local:ProdutosViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">

        <!-- SearchBar para digitação da busca -->
        <SearchBar Placeholder="Buscar produto..."
                   TextChanged="OnSearchBarTextChanged" />

        <!-- CollectionView para exibir os produtos filtrados -->
        <CollectionView ItemsSource="{Binding ProdutosFiltrados}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding Nome}" FontSize="20"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>
