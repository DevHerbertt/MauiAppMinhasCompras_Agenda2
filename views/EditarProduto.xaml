<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="Editar Produto">

    <StackLayout Padding="20">
        <Label Text="Descrição" />
        <Entry x:Name="DescricaoEntry" Placeholder="Digite a descrição do produto" />

        <Label Text="Quantidade" />
        <Entry x:Name="QuantidadeEntry" Placeholder="Digite a quantidade" Keyboard="Numeric" />

        <Label Text="Preço" />
        <Entry x:Name="PrecoEntry" Placeholder="Digite o preço" Keyboard="Numeric" />

        <Button Text="Atualizar" Clicked="OnSalvarClicked" Margin="0,10" />
        <Button Text="Excluir" Clicked="OnExcluirClicked" TextColor="Red" />
    </StackLayout>
</ContentPage>